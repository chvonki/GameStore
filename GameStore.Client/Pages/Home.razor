@page "/"
@using GameStore.Client.Models

<PageTitle>Game Catalog</PageTitle>

<h1>Game Catalog</h1>

<table>
    <thead>
        <th>№</th>
        <th>Название</th>
        <th>Жанр</th>
        <th>Цена</th>
        <th>Дата выхода</th>
        <th></th>
    </thead>
    <tbody>
        @foreach(var game in games)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>@game.Genre</td>
                <td>@game.Price</td>
                <td>@game.ReleaseDate</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

