{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug Client",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/GameStore.Client",
            "url": "http://localhost:5161",
            "browser": "chrome"
        },
        {
            "name": "Launch and Debug Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/GameStore.Server/bin/Debug/net8.0/GameStore.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GameStore.Server",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}